@page
@model FindHouseAndT.WebApp.Pages.RegisterUserModel
@{
}
<div class="container">
	<div class="row justify-content-center">
		<div class="col-12 col-md-4">
			<!-- Pills navs -->
			<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
				<li class="nav-item" role="presentation">
					<a class="nav-link active" id="tab-login" data-toggle="pill" href="#pills-login" role="tab"
					   aria-controls="pills-login" aria-selected="true">Login</a>
				</li>
				<li class="nav-item" role="presentation">
					<a class="nav-link" id="tab-register" data-toggle="pill" href="#pills-register" role="tab"
					   aria-controls="pills-register" aria-selected="false">Register</a>
				</li>
			</ul>
			<!-- Pills navs -->
			<!-- Pills content -->
			<div class="tab-content">
				<div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
					<div class="text-center mb-3">
						<p>Sign in with:</p>
						<form asp-page-handler="ExternalLogin" method="post">
						@if (Model.LoginDTO.Schemes.Count() > 0)
						{
							@foreach (var provider in Model.LoginDTO.Schemes)
							{
								<button  type="submit" name="Provider" value="@provider.Name" title="Login using abc @provider.Name Account" class="btn btn-link mx-1">
									<span class="ms-2 fs-6">@provider.DisplayName</span>
								</button>
							}
						}
						</form>
					</div>
					<form asp-page-handler="Login" method="post">
						

						<p class="text-center">or:</p>
						<div asp-validation-summary="All" class="text-danger"></div>
						<!-- Email input -->
						<div class="form-group mb-4">
							<label asp-for="LoginDTO.Email" class="form-label"></label>
							<input asp-for="LoginDTO.Email" class="form-control" />
							<span asp-validation-for="LoginDTO.Email" class="text-danger"></span>
						</div>

						<!-- Password input -->
						<div class="form-group mb-4">
							<label asp-for="LoginDTO.Password" class="form-label"></label>
							<input asp-for="LoginDTO.Password" class="form-control" />
							<span asp-validation-for="LoginDTO.Password" class="text-danger"></span>
						</div>

						<!-- 2 column grid layout -->
						<div class="row mb-4">
							<div class="col-md-6 d-flex justify-content-center">
								<!-- Checkbox -->
								<div class="form-check mb-3 mb-md-0">
									<input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
									<label class="form-check-label" for="loginCheck"> Remember me </label>
								</div>
							</div>

							<div class="col-md-6 d-flex justify-content-center">
								<!-- Simple link -->
								<a href="#!">Forgot password?</a>
							</div>
						</div>

						<!-- Submit button -->
						<button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

						<!-- Register buttons -->
						<div class="text-center">
							<p>Not a member? <a href="#!">Register</a></p>
						</div>
					</form>
				</div>
				<div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
					<form asp-page-handler="Register" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="text-center mb-3">
							<p>Sign up with:</p>
							<button type="button" class="btn btn-link mx-1">
								<i class="fab fa-facebook-f"></i>
							</button>

							<button type="button" class="btn btn-link mx-1">
								<i class="fab fa-google"></i>
							</button>

							<button type="button" class="btn btn-link mx-1">
								<i class="fab fa-twitter"></i>
							</button>

							<button type="button" class="btn btn-link mx-1">
								<i class="fab fa-github"></i>
							</button>
						</div>

						<p class="text-center">or:</p>

						<!-- Name input -->
						<div class="form-group mb-4">
							<label asp-for="RegisterDTO.FullName" class="form-label"></label>
							<input asp-for="RegisterDTO.FullName" class="form-control" />
							<span asp-validation-for="RegisterDTO.FullName" class="text-danger"></span>
						</div>

						<!-- Username input -->
						<div class="form-group mb-4">
							<label asp-for="RegisterDTO.Email" class="form-label"></label>
							<input asp-for="RegisterDTO.Email" class="form-control" />
							<span asp-validation-for="RegisterDTO.Email" class="text-danger"></span>
						</div>

						<!-- Email input -->
						<div class="form-group mb-4">
							<label class="form-label" asp-for="RegisterDTO.BirthDate"></label>
							<input asp-for="RegisterDTO.BirthDate" class="form-control" />
							<span asp-validation-for="RegisterDTO.BirthDate" class="text-danger"></span>
						</div>

						<!-- Password input -->
						<div class="form-group mb-4">
							<label class="form-label" asp-for="RegisterDTO.Password"></label>
							<input asp-for="RegisterDTO.Password" class="form-control" />
							<span asp-validation-for="RegisterDTO.Password" class="text-danger"></span>
						</div>

						<!-- Repeat Password input -->
						<div class="form-group mb-4">
							<label class="form-label" asp-for="RegisterDTO.ConfirmPassword"></label>
							<input asp-for="RegisterDTO.ConfirmPassword" class=" form-control" />
							<span asp-validation-for="RegisterDTO.ConfirmPassword" class="text-danger"></span>
						</div>

						<!-- Checkbox -->
						@* <div class="form-check d-flex justify-content-center mb-4">
							<input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
								   aria-describedby="registerCheckHelpText" />
							<label class="form-check-label" for="registerCheck">
								I have read and agree to the terms
							</label>
						</div> *@

						<!-- Submit button -->
						<button type="submit" class="btn btn-primary btn-block mb-3">Sign up</button>
					</form>
				</div>
			</div>
			<!-- Pills content -->
		</div>
	</div>
</div>
