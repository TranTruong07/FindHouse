@page
@model FindHouseAndT.WebApp.Pages.User.ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<h2>Confirm Email</h2>

@if (Model.IsEmailConfirmed)
{
    <p>Your email has been confirmed. You can now <a href="/User/RegisterUser">login</a>.</p>
}
else
{
    <p>You need go to email and confirming your email.</p>
}