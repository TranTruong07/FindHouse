@page
@model FindHouseAndT.WebApp.Pages.ManagerPages.RoomManagerModel
@{
	Layout = "_ManagerLayout";
}
@section StyleSection {
	<style>
		.modal-backdrop {
			z-index: 150 !important;
		}
	</style>
}
<div class="container">
    <div class="position-relative" style="height: 50px;">
        <div class="position-absolute top-0 end-0 m-2">
            <button class="btn btn-primary" data-toggle="modal" data-target="#addMotelModal">Add</button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="addMotelModal" tabindex="-1" role="dialog" aria-labelledby="addMotelModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMotelModalLabel">Add New Room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Form thêm Motel -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="motelName">Code Room</label>
                            <input asp-for="RoomManagerDTO.RoomCode" class="form-control" id="motelName" required>
                        </div>
                        <div class="form-group">
                            <label for="motelAddress">Number of Floor</label>
                            <input asp-for="RoomManagerDTO.Floor" class="form-control" id="motelAddress" required>
                        </div>
                        <div class="form-group">
                            <label for="motelQuantityRoom">Area</label>
                            <input asp-for="RoomManagerDTO.Area" class="form-control" id="motelQuantityRoom" required>
                        </div>
                        <div class="form-group">
                            <label for="motelDescription1">Description1</label>
                            <input asp-for="RoomManagerDTO.Description1" class="form-control" id="motelDescription1" required>
                        </div>
                        <div class="form-group">
                            <label for="motelDescription2">Description2 (Optional)</label>
                            <input asp-for="RoomManagerDTO.Description2" class="form-control" id="motelDescription2">
                        </div>
                        <div class="form-group">
                            <label for="motelDescription2">Price</label>
                            <input asp-for="RoomManagerDTO.Price" class="form-control" id="motelDescription2">
                        </div>
                        <div class="form-group">
                            <label for="motelDescription2">Price</label>
                            <input asp-for="RoomManagerDTO.Price" class="form-control" id="motelDescription2">
                        </div>
                        <div class="form-group">
                            <label for="motelKeyImage">Image Room</label>
                            <input type="file" asp-for="RoomManagerDTO.ImageRoom" class="form-control" id="motelKeyImage" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>QuantityRoom</th>
                    <th>HouseOwner</th>
                    <th>Description1</th>
                    <th>Description2</th>
                    <th>KeyImageMotel</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var motel in Model.ListMotel)
                {
                    <tr>
                        <td><input type="checkbox" name=""></td>
                        <td>@motel.IdMotel</td>
                        <td>@motel.Name</td>
                        <td>@motel.Address</td>
                        <td>@motel.QuantityRoom</td>
                        <td>@motel.IdHouseOwner</td>
                        <td>@motel.Description1</td>
                        <td>@motel.Description2</td>
                        <td><img style="width:100px" src="@motel.ImageMotel" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>